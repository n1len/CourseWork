        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.NumericField2)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.NumericField3)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.NumericField3)
        </dd>
        <dt class="col-sm-2">
