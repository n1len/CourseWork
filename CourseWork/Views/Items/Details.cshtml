            </dd>
        }
        @if (Model.Item.CustomCollection.IsTextField3Visible)
        {
            <dt class="col-sm-6 text-right">
                @Model.Item.CustomCollection.TextField3
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Item.TextField3)
