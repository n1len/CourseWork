            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Item.CheckBox3)
            </dd>
        }
    </dl>
</div>
<div>
    <h3>Комментарии(@Model.Comments.Count()):</h3>
    @if (Model.Comments.Any())
    {
        @foreach (var item in Model.Comments)
        {
            <div class="comment">
                <div class="row">
                    <div class="col-sm-8">
                        <h4>@item.User.UserName</h4>
                        <p><i>@item.Description</i></p>
                    </div>
                    <div class="col text-right">
                        <form asp-controller="Items">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <button type="submit" class="btn btn-primary" asp-route-id="@item.Id" asp-route-itemId="@item.ItemId"
                                        formmethod="post" asp-action="LikeComment" style="margin-right: 25px; margin-top: 30px;">
                                    @if (item.Likes.Any(c => c.UserName == User.Identity.Name && c.IsLiked))
                                    {
                                        <i class="fas fa-heart"></i>
                                    }
                                    else
                                    {
                                        <i class="far fa-heart"></i>
                                    }
                                    @if (item.Likes.Any(c => c.IsLiked))
                                    {
                                        @item.Likes.Count(c => c.IsLiked)
                                    }
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-primary" disabled="disabled" style="margin-right: 25px; margin-top: 30px;">
                                    <i class="far fa-heart"></i>
                                    @if (item.Likes.Any(c => c.IsLiked))
                                    {
                                        @item.Likes.Count(c => c.IsLiked)
                                    }
                                </button>
                            }
                        </form>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="row">
            <div class="col">
                <p><i style="font-size: 20px">Оставьте первый комментарий</i></p>
            </div>
        </div>
    }
</div>
@if (User.Identity.IsAuthenticated)
{
    <form asp-action="Details" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h5><i>Добавить комментарий:</i></h5>
        <div class="row">
            <div class="col-sm-5">
                <div class="form-group">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" asp-route-id="@Model.Item.Id">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <div>
        <h5><i>Возможность оставлять и лайкать комментарии/айтемы доступна только авторизованным пользователям</i></h5>
    </div>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model.Item.Id">Edit</a> |
    <a asp-action="Index">Back to List</a> |
</div>
