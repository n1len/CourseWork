        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.OneLineField3)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.TextField1)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.TextField1)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.TextField2)
        </dt>
        <dd class="col-sm-10">
