@model CourseWork.ViewModels.ItemViewModel

@{
    ViewData["Title"] = "Details";
}
<div>
    <div class="row">
        <div class="col-sm-11 text-center">
            <h2>@Model.Item.Title</h2>
        </div>
        <div class="col text-right">
            <form asp-controller="Items">
                @if (User.Identity.IsAuthenticated)
                {
                    <button type="submit" class="btn btn-primary" asp-route-id="@Model.Item.Id"
                            formmethod="post" asp-action="LikeItem">
                        @if (Model.LikesOnItem.Any(c => c.UserName == User.Identity.Name && c.IsLiked))
                        {
                            <i class="fas fa-heart"></i>
                        }
                        else
                        {
                            <i class="far fa-heart"></i>
                        }
                        @if (Model.LikesOnItem.Any(c => c.IsLiked))
                        {
                            @Model.LikesOnItem.Count(c => c.IsLiked)
                        }
                    </button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary" disabled="disabled">
                        <i class="far fa-heart"></i>
                        @if (Model.LikesOnItem.Any(c => c.IsLiked))
                        {
                            @Model.LikesOnItem.Count(c => c.IsLiked)
                        }
                    </button>
                }
            </form>
        </div>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-6 text-right">
            Тэги айтема
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Item.Tags)
        </dd>
        @if (Model.Item.CustomCollection.IsNumericField1Visible)
        {
            <dt class="col-sm-6 text-right">
                @Model.Item.CustomCollection.NumericField1
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Item.NumericField1)
            </dd>
        }
        @if (Model.Item.CustomCollection.IsNumericField2Visible)
        {
            <dt class="col-sm-6 text-right">
                @Model.Item.CustomCollection.NumericField2
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Item.NumericField2)
            </dd>
        }
        @if (Model.Item.CustomCollection.IsNumericField3Visible)
        {
            <dt class="col-sm-6 text-right">
                @Model.Item.CustomCollection.NumericField3
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Item.NumericField3)
            </dd>
        }
        @if (Model.Item.CustomCollection.IsOneLineField1Visible)
        {
            <dt class="col-sm-6 text-right">
                @Model.Item.CustomCollection.OneLineField1
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Item.OneLineField1)
            </dd>
        }
        @if (Model.Item.CustomCollection.IsOneLineField2Visible)
        {
            <dt class="col-sm-6 text-right">
                @Model.Item.CustomCollection.OneLineField2
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Item.OneLineField2)
            </dd>
        }
        @if (Model.Item.CustomCollection.IsOneLineField3Visible)
        {
            <dt class="col-sm-6 text-right">
                @Model.Item.CustomCollection.OneLineField3
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Item.OneLineField3)
            </dd>
        }
        @if (Model.Item.CustomCollection.IsTextField1Visible)
        {
            <dt class="col-sm-6 text-right">
                @Model.Item.CustomCollection.TextField1
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Item.TextField1)
            </dd>
        }
        @if (Model.Item.CustomCollection.IsTextField2Visible)
        {
            <dt class="col-sm-6 text-right">
