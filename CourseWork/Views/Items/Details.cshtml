@model CourseWork.ViewModels.ItemViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <div class="row">
        <div class="col-sm-10">
            <h4>Item</h4>
        </div>
        <div class="col text-right">
            <form asp-controller="Items">
                @if (User.Identity.IsAuthenticated)
                {
                    <button type="submit" class="btn btn-primary" asp-route-id="@Model.Item.Id"
                            formmethod="post" asp-action="LikeItem">
                        <i class="far fa-heart"></i>
                        @if (Model.LikesOnItem.Any(c => c.IsLiked))
                        {
                            @Model.LikesOnItem.Count(c => c.IsLiked)
                        }
                    </button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary" disabled="disabled">
                        <i class="far fa-heart"></i>
                        @if (Model.LikesOnItem.Any(c => c.IsLiked))
                        {
                            @Model.LikesOnItem.Count(c => c.IsLiked)
                        }
                    </button>
                }
            </form>
        </div>
    </div>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Tags)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Tags)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.NumericField1)
        </dt>
