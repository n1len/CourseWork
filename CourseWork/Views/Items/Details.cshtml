        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.OneLineField1)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.OneLineField2)
        </dt>
        <dd class="col-sm-10">
